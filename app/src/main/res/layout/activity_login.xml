<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c8e4f2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="46dp"
    android:paddingRight="46dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.worktogether.subwayticket.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_logo_round"/>
        <ImageView
            android:src="@drawable/subway"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <ImageView
            android:src="@drawable/user"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true" />

        <EditText
            android:id="@+id/login_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:maxLength="11"
            android:inputType="number"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:hint="请输入手机号码"
            android:textSize="15sp"
            android:textColorHint="#aaa"
            android:background="@null" />
        </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#555" />

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/img_pwd"
            android:src="@drawable/passwd"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/img_eye"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingBottom="0dp"
            android:src="@drawable/eye"/>

        <EditText
            android:id="@+id/login_pwd"
            android:layout_toRightOf="@id/img_pwd"
            android:layout_toLeftOf="@id/img_eye"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true"
            android:hint="请输入密码"
            android:textSize="15sp"
            android:textColorHint="#aaa"
            android:background="@null"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#555" />

    <Button
        android:layout_height="42dp"
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:id="@+id/login_btn"
        android:text="登  录"
        android:textSize="18sp"
        android:textColor="#fff"
        android:layout_span="2"
        android:background="@drawable/bg_pay_btn"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/findpwd_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="找回密码？"
            android:textColor="#707070"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/register_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即注册"
            android:textColor="@color/colorLightBlue"
            android:textSize="15sp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</LinearLayout>
